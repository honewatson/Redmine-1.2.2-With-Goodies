<h2><%= l(:label_contact_new) %></h2>

<% labelled_tabular_form_for :contact, @contact, :url => {:action => 'create', :project_id => @project}, :html => { :multipart => true, :id => 'contact_form'} do |f|  %> 
  <%= render :partial => 'form', :locals => {:f => f}  %> 
  <%= render :partial => 'name_observer' %>
  <%= submit_tag l(:button_save) -%>
<% end -%>

<% content_for :sidebar do %>
	<%= render :partial => 'common/sidebar' %>   
	<%= render :partial => 'contacts_duplicates/duplicates' %>
<% end %>

<% content_for :header_tags do %>
	<%= javascript_include_tag :defaults %>   
	<%= javascript_include_tag :contacts, :plugin => 'redmine_contacts'  %>
	<%= stylesheet_link_tag :contacts, :plugin => 'redmine_contacts' %>
<% end %>
